{
    "name": "parrot-client",
    "version": "1.0.0",
    "description": "OAX Parrot Parachain Client",
    "main": "src/parrot/interface.js",
    "scripts": {
        "build": "yarn generate:defs && yarn generate:meta",
        "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package sample-polkadotjs-typegen/interfaces --input ./src/interfaces",
        "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package sample-polkadotjs-typegen/interfaces --endpoint ./parrot.json --output ./src/interfaces",
        "lint": "tsc --noEmit --pretty"
    },
    "author": "OAX Foundation",
    "license": "ISC",
    "dependencies": {
        "@polkadot/api": "1.18.1",
        "@polkadot/util": "2.13.1",
        "@polkadot/util-crypto": "^2.13.1",
        "bn.js": "^5.1.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^3.3.0",
        "@typescript-eslint/parser": "^3.3.0",
        "eslint": "^7.2.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.21.2",
        "@polkadot/typegen": "^1.4.0",
        "ts-node": "^8.6.2",
        "typescript": "3.9.5"
    }
}